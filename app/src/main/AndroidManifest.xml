<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Firebase / Internet -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage permission (only needed for selecting a photo from gallery) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Camera permission (REQUIRED for taking a photo) -->
    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="false"/>

    <!-- Notifications (optional) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/lofo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/lofo_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Login Activity -->
        <activity
            android:name=".activities.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard -->
        <activity
            android:name=".activities.main.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Registration -->
        <activity
            android:name=".activities.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Report Item -->
        <activity
            android:name=".activities.items.ReportItemActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Look for Items -->
        <activity
            android:name=".activities.items.SearchItemsActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Display Item -->
        <activity
            android:name=".activities.items.ItemDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Inbox -->
        <activity
            android:name=".activities.chat.InboxActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Chat -->
        <activity
            android:name=".activities.chat.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Settings -->
        <activity
            android:name=".activities.main.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <!-- Profile -->
        <activity
            android:name=".activities.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.myapplication.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


    </application>

</manifest>
