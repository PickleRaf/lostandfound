<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <!-- First Name Section -->
        <TextView
            android:id="@+id/labelFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelFirstName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Last Name Section -->
        <TextView
            android:id="@+id/labelLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvFirstName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelLastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Student ID Section -->
        <TextView
            android:id="@+id/labelStudentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student ID"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvLastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvStudentId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelStudentId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Date of Birth Section -->
        <TextView
            android:id="@+id/labelDateOfBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvStudentId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvDateOfBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelDateOfBirth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Major Section -->
        <TextView
            android:id="@+id/labelMajor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Major"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateOfBirth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvMajor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelMajor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Email Section -->
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvMajor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Phone Section (Editable) -->
        <TextView
            android:id="@+id/labelPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone Number (Optional)"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Address Section (Editable) -->
        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address (Optional)"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#808080"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter address"
            android:inputType="textPostalAddress"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:background="@drawable/edittextstuff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/labelAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/profile_save_button"
            android:background="@drawable/edittextstuff"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/profile_back_button"
            android:background="@drawable/edittextstuff"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSaveProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>