<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/report_item_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:contentDescription="@string/report_item_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTypeLabel"
        app:layout_constraintVertical_bias="0" />

    <!-- Type Label -->
    <TextView
        android:id="@+id/tvTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_type_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:contentDescription="@string/report_item_type_label"
        app:layout_constraintTop_toBottomOf="@id/tvReportTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp" />

    <!-- Spinner -->
    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittextstuff"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvTypeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Details Label -->
    <TextView
        android:id="@+id/tvDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_details_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinnerType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <!-- Details EditText -->
    <EditText
        android:id="@+id/etDetails"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/edittextstuff"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:hint="@string/report_item_details_hint"
        android:inputType="textMultiLine"
        android:autofillHints="description"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description character counter -->
    <TextView
        android:id="@+id/tvDescCharCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_desc_char_count_placeholder"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etDetails"
        app:layout_constraintEnd_toEndOf="@id/etDetails"
        android:layout_marginTop="4dp" />

    <!-- Location label -->
    <TextView
        android:id="@+id/tvImportantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_location_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvDescCharCount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp" />

    <!-- Location EditText -->
    <EditText
        android:id="@+id/etlocation"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/edittextstuff"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:hint="@string/report_item_location_hint"
        android:inputType="textMultiLine"
        android:autofillHints="postalAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvImportantLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Location char count -->
    <TextView
        android:id="@+id/tvLocCharCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_loc_char_count_placeholder"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etlocation"
        app:layout_constraintEnd_toEndOf="@id/etlocation"
        android:layout_marginTop="4dp" />

    <!-- Submit button -->
    <Button
        android:id="@+id/btnSubmitReport"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/edittextstuff"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_submit_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocCharCount"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" />

    <!-- Back button -->
    <Button
        android:id="@+id/btnBackRPI"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/edittextstuff"
        android:fontFamily="@font/montserrat"
        android:text="@string/report_item_return_button"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvLocCharCount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp" />

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progressBarReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnSubmitReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
