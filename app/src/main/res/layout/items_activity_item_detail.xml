<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Reporter Name -->
        <TextView
            android:id="@+id/tvReporterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Posted by: Loading..."
            android:textSize="18sp"
            android:textColor="#808080"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Reported Time -->
        <TextView
            android:id="@+id/tvReportedTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Reported: Loading..."
            android:textSize="18sp"
            android:textColor="#808080"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvReporterName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Status (moved here - under reported time, before description) -->
        <TextView
            android:id="@+id/tvItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_status_active"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#00FF00"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvReportedTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Description Label -->
        <TextView
            android:id="@+id/labelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_item_description"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#808080"
            app:layout_constraintTop_toBottomOf="@id/tvItemStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

        <!-- Description Content -->
        <TextView
            android:id="@+id/showDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_loading"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/labelDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <!-- Location Label -->
        <TextView
            android:id="@+id/labelLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_location"
            android:textColor="#808080"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/showDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

        <!-- Location Content -->
        <TextView
            android:id="@+id/showLoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_loading"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/labelLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <!-- Resolve Button -->
        <Button
            android:id="@+id/btnResolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_mark_as_resolved"
            android:background="@drawable/edittextstuff"
            android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/showLoc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Report User Button -->
        <Button
            android:id="@+id/btnReportUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextstuff"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_report_user"
            android:textColor="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/showLoc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackDLI"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittextstuff"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_return"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/itsminebtn"
            app:layout_constraintTop_toBottomOf="@id/btnReportUser"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"/>

        <!-- It's Mine Button -->
        <Button
            android:id="@+id/itsminebtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittextstuff"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_its_mine"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBackDLI"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnReportUser"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"/>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBarDLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>